<h1>Especialidades</h1>

<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th colspan="2"></th>
  </tr> 
  <% @especialidades.each do |e| %> 
    <tr>
      <td><%= e.nome %></td>
      <td><%= link_to "Editar", edit_especialidade_path(:id) %></td>
      <td><%= link_to "Excluir", especialidade_path(id: e), method: :delete %></td>
    </tr>
  <% end  %>
</table>

<%= link_to "Novo", new_especialidade_path %>

