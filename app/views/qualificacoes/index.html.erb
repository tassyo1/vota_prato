<p id="notice"><%= notice %></p>

<h1>Listing Qualificacoes</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Restaurante</th>
      <th>Nota</th>
      <th>Valor gasto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @qualificacoes.each do |qualificacao| %>
      <tr>
        <td><%= qualificacao.cliente.nome %></td>
        <td><%= qualificacao.restaurante.nome %></td>
        <td><%= qualificacao.nota %></td>
        <td><%= valor_formatado(qualificacao.valor_gasto) %></td>
        <td><%= link_to 'Mostrar', qualificacao %></td>
        <td><%= link_to 'Editar', edit_qualificacao_path(qualificacao) %></td>
      </tr>
    <% end %>
  </tbody>

<br>

<%= link_to 'Nova Qualificação', new_qualificacao_path %>

</table>


