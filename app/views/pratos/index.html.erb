
<h1> Pratos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <!-- <th>Foto</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pratos.each do |p| %>
      <tr>
        <td><%= p.nome %></td>
        <td><%= p.descricao %></td>
        <!--<td><%= image_tag p.foto.url(:thumb) %></td> -->
        <td><%= link_to "Receita", controller: "receitas", action: "show", prato: p %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo", controller: "pratos", action: "new" %>
