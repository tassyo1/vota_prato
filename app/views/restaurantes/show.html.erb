<h1> <%= @restaurante.nome %></h1>

<p>
<% if !@restaurante.foto.blank? %>
  <%= image_tag @restaurante.foto.url(:medium)  %>
<% end %>
</p>
<p>
	<b>Endereço: </b>
	<%= @restaurante.endereco %>
</p>
<p>
<b>Especialidade: </b>
<% @restaurante.especialidades.each do |e| %>
   <%= e.nome %> <br>
<% end %>
	</p>

<b> Nota média:</b>
	<%= @restaurante.qualificacoes.average(:nota) %> <br/>
<b> Qualificações:</b>
	<%= @restaurante.qualificacoes.count %> <br/>
<b> Preço médio: </b>
	<%= valor_formatado(@restaurante.qualificacoes.average(:valor_gasto)) %> <br/> <br/>		
<%= link_to 'Editar', action: 'edit', id: @restaurante %> |
<%= link_to 'Voltar', action: 'index' %> |
<%= link_to 'Qualificar este restaurante', controller: "qualificacoes", action: "new", restaurante: @restaurante %>

