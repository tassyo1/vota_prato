
<%= form_for(@comentario) do |f| %>

  <div class="field">
    <%= f.label :conteudo %><br>
    <%= f.text_area :conteudo %>
  </div>
  <div class="field">
    <%= f.label :comentavel_id %><br>
    <%= f.number_field :comentavel_id %>
  </div>
  <div class="field">
    <%= f.label :comentavel_type %><br>
    <%= f.text_field :comentavel_type %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
